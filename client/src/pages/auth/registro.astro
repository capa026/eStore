---
import Card from "@components/auth/UI/Card.astro";
import AuthLayout from "@layouts/AuthLayout.astro";
import RegisterForm from "@components/auth/RegisterForm.jsx";


---

<AuthLayout title="eStore - registro" transition:name="fade">
  <div class="flex flex-col w-[80%] md:w-1/2 lg:w-1/3 mx-auto">

    <h1 class="mb-5 text-4xl uppercase">Registrate</h1>
    <Card>
      <RegisterForm client:load/>
    </Card>
    <div class="text-center mt-5">
      Ya estas registrado? <a href="/auth/login" class="font-bold hover:text-gray-400">ACCEDE</a> aqui.
    </div>
  </div>
</AuthLayout>