import Footer from "@components/Footer.astro";
import "../styles/global.css";
const {title} = Astro.props;
import Navbar from "@components/Navbar";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<title>{title}</title>
	</head>
	<body>
		<article class="bg-rich-black text-white text-center text-sm">
			Ofertas toda la semana ðŸ’¥
		</article>
		<main class="">
			<Navbar client:load/>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		font-family: system-ui, sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
		background: #C9D6FF;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to bottom right, #E2E2E2, #C9D6FF);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to bottom right, #E2E2E2, #C9D6FF); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		background-attachment: fixed;
	}
</style>
